<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:converter="clr-namespace:BangumiX.Converters"
             mc:Ignorable="d"
             x:Class="BangumiX.Views.ProgressPage"
             Title="Progress">
    
    <ContentPage.Resources>
        <ResourceDictionary>
            <converter:InverseBoolConverter x:Key="InverseBoolConverter"/>
        </ResourceDictionary>
    </ContentPage.Resources>
    
    <ContentPage.Content>
        <StackLayout>
            <ListView x:Name="ItemsListView"
                      ItemsSource="{Binding Items}"
                      VerticalOptions="FillAndExpand"
                      HasUnevenRows="true"
                      RefreshCommand="{Binding RefreshCommand}"
                      IsPullToRefreshEnabled="true"
                      IsRefreshing="{Binding IsBusy, Mode=OneWay}"
                      SeparatorColor="Gray"
                      CachingStrategy="RecycleElement"
                      ItemSelected="OnItemSelected">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Padding="10" Orientation="Horizontal">
                                <Image Source="{Binding Image}"
                                       WidthRequest="90"
                                       HeightRequest="120"
                                       Aspect="AspectFill"/>
                                <StackLayout HorizontalOptions="FillAndExpand">
                                    <Label Text="{Binding DisplayName}" 
                                           LineBreakMode="TailTruncation"
                                           Style="{DynamicResource ListItemTextStyle}" 
                                           TextColor="#d26585"
                                           FontSize="16" />
                                    <Label Text="{Binding AirWeekday}" 
                                           LineBreakMode="TailTruncation"
                                           Style="{DynamicResource ListItemDetailTextStyle}"
                                           TextColor="{Binding EpColor}"
                                           FontSize="13" />
                                    <Label Text="{Binding WatchedAndAirEpsCountDesc}" 
                                           LineBreakMode="TailTruncation"
                                           Style="{DynamicResource ListItemDetailTextStyle}"
                                           TextColor="{Binding EpColor}"
                                           FontSize="13" />
                                    <StackLayout Orientation="Horizontal" HorizontalOptions="End" >
                                        <Button Text="{Binding NextEpDesc}"
                                                TextColor="{Binding EpColor}"
                                                Clicked="NextEpButton_Clicked"
                                                HeightRequest="44"
                                                BackgroundColor="Transparent"
                                                IsVisible="{Binding IsUpdating, Converter={StaticResource InverseBoolConverter}}"
                                                BindingContext="{Binding}"
                                                HorizontalOptions="Start"/>
                                        <ActivityIndicator IsRunning="{Binding IsUpdating}"
                                                           IsVisible="{Binding IsUpdating}"
                                                           WidthRequest="30"
                                                           HeightRequest="30"/>
                                    </StackLayout>
                                </StackLayout>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>